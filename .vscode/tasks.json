{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Launch Dev Terminals",
      "dependsOn": ["api (8080)", "admin (3001)", "web (3000)"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "api (8080)",
      "type": "shell",
      "command": "cd apps/api && yarn dev",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "admin (3001)",
      "type": "shell",
      "command": "cd apps/admin && yarn dev",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "web (3000)",
      "type": "shell",
      "command": "cd apps/web && yarn dev",
      "isBackground": false,
      "problemMatcher": []
    }
  ]
}
