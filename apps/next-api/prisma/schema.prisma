generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String
}

model Post {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  title       String
  description String
  body        String
}
