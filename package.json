{
  "name": "personal-website",
  "version": "4.1.0",
  "author": "michaelhyi",
  "license": "MIT",
  "private": true,
  "packageManager": "bun@1.0.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "ci": "turbo run clean && bun install",
    "clean": "rm -rf .turbo && rm -rf node_modules && turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,yml,md}\" && eslint --fix && turbo run format",
    "lint": "prettier --check . && turbo run lint",
    "prepare": "husky install",
    "setup": "bun install && docker compose up -d && bun prepare && turbo run setup",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  }
}
